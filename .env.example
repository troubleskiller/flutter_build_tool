# Application
SECRET_KEY=your-secret-key-here-change-in-production
API_V1_STR=/api/v1

# Database
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/flutter_unity_build

# Redis
REDIS_URL=redis://localhost:6379/0

# Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Unity Configuration
UNITY_EDITOR_PATH=/Applications/Unity/Hub/Editor/2022.3.10f1/Unity.app/Contents/MacOS/Unity
UNITY_REPO_PATH=/tmp/unity_repo
UNITY_REPO_URL=https://github.com/your-org/unity-project.git

# Flutter Configuration
FLUTTER_SDK_PATH=/usr/local/flutter
FLUTTER_REPO_PATH=/tmp/flutter_repo
FLUTTER_REPO_URL=https://github.com/your-org/flutter-project.git

# Build Settings
BUILD_TIMEOUT=3600
MAX_CONCURRENT_BUILDS=1

# Cleanup Settings
MAX_ARTIFACT_AGE_DAYS=30
MAX_ARTIFACT_COUNT=100

# Email Settings (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Webhook Settings (Optional)
WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL