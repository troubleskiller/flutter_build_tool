# Docker Environment Configuration
# Copy this file to .env and update the paths for your system

# Security - MUST CHANGE IN PRODUCTION
JWT_SECRET=change-this-secret-key-in-production-please

# Unity Configuration
# Update these paths to point to your actual Unity installation and project
UNITY_EDITOR_PATH=C:\Program Files\Unity\Hub\Editor\2022.3.10f1\Editor\Unity.exe
UNITY_PROJECT_PATH=C:\your\unity\project\path
UNITY_REPO_URL=https://github.com/your-org/unity-project.git

# Flutter Configuration
# Update these paths to point to your actual Flutter SDK and project
FLUTTER_SDK_PATH=C:\flutter\bin\flutter.bat
FLUTTER_PROJECT_PATH=C:\your\flutter\project\path
FLUTTER_REPO_URL=https://github.com/your-org/flutter-project.git

# Optional Unity and Flutter installation paths for volume mapping
# Uncomment and set if you want to use local installations inside containers
# UNITY_INSTALL_PATH=C:\Program Files\Unity
# FLUTTER_INSTALL_PATH=C:\flutter

# Database Configuration (used by Docker Compose)
# You can change these if needed, but remember to update docker-compose.yml too
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres123
POSTGRES_DB=flutter_unity_build

# Application Settings
NODE_ENV=production
BUILD_TIMEOUT=3600000
MAX_CONCURRENT_BUILDS=1